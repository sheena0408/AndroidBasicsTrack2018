<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mothersday.MainActivity"
    android:background="@drawable/mom"
    android:scaleType="centerCrop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="To the world \nyou are a Mother \nBut to your family,\nyou are the world..."
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="Happy Mother's Day!"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:background="#e3e3e3"
        android:alpha="0.7"
        android:fontFamily="sans-serif-smallcaps"/>

</RelativeLayout>
